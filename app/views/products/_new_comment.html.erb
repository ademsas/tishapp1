   
<% if signed_in? %>
<div class="container">
        <div class="row" style="margin-top:40px;">
          <div class="col-md-6" style="margin-left:200px;">
            <div class="well well-sm">
              <div class="text-center">
                  <a class="btn btn-success btn-green" id="open-review-box">Leave a Review</a>
              </div>
                  <div class="row " id="post-review-box" style="display:none;">
                  <%= form_for([@product, @product.comment.build], remote: true) do |f| %>
                    <p>
                      <%= f.label :body, "Comments" %><br>
                      <%= f.text_area :body, class: "form-control animated", style: "width: 80%;" "margin-left: 55px;", placeholder: "Enter your review here...", rows: "5" %>
                    </p>
                    <p>
                        <div class="rating"></div>
                    </p> 
                    <p>
                      <%= f.submit "Submit" %>
                    </p>
                  <% end %>
                  </div>
            </div>
        </div>
    </div>
</div>
<% end %>

